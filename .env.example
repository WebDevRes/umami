# Umami Environment Variables
# Copy this file to .env and fill in your values

# Database connection string
# PostgreSQL: postgresql://username:password@localhost:5432/umami
# MySQL: mysql://username:password@localhost:3306/umami
DATABASE_URL=postgresql://umami:umami@localhost:5432/umami

# Optional: Redis for caching (improves performance)
# REDIS_URL=redis://localhost:6379

# Optional: ClickHouse for analytics data (recommended for high traffic)
# CLICKHOUSE_URL=http://localhost:8123/umami

# Optional: Hash salt for anonymizing data (default: random)
# HASH_SALT=your-random-hash-salt

# Optional: Disable telemetry
# DISABLE_TELEMETRY=1

# Optional: Custom hostname
# HOSTNAME=0.0.0.0

# Optional: Custom port (default: 3000)
# PORT=3000

# Optional: Base path if running behind proxy
# BASE_PATH=/analytics

# Optional: Force SSL
# FORCE_SSL=1

# Optional: Disable login
# DISABLE_LOGIN=1

# Optional: Disable registration
# DISABLE_REGISTRATION=1

# Optional: Tracker script name (default: script.js)
# TRACKER_SCRIPT_NAME=umami.js

# Optional: Client IP header (if behind proxy)
# CLIENT_IP_HEADER=X-Forwarded-For

# Optional: Cloud mode (managed hosting)
# CLOUD_MODE=1

# Optional: Cloud URL
# CLOUD_URL=https://cloud.umami.is
